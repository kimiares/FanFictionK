@model FFK.ViewModels.LoginViewModel


<body class="text-center">

    <form method="post" class="form-signin" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" placeholder="E-Mail" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label> <br />
            <input asp-for="RememberMe" placeholder="Remember me?" />
        </div>
        <div>

            <ul class="list-group" style="list-style-type: none">
                <li><button class=" m-lg-3 btn btn-outline-info" type="submit">Sign in</button></li>
                <li>
                    <a class="btn btn-info" asp-controller="Account" asp-action="GoogleLogin">Google</a>
                    <a class="btn btn-info" asp-controller="Account" asp-action="FacebookLogin">Facebook</a>
                    <a class="btn btn-info" asp-controller="Account" asp-action="TwitterLogin">Twitter</a>
                </li>
            </ul>
        </div>
    </form>
</body>