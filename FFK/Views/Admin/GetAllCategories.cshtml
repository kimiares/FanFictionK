@model IEnumerable<FFK.Models.Category>

@{
    ViewData["Title"] = "GetAllCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row border-dark">
    <div class="col-md-2">
        @await Html.PartialAsync("_AdminPageLayout")
    </div>
    <div div class="col-md-10">

        <p>
            <a asp-action="CreateCategory" asp-controller="Category">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
